<mapper namespace="demo.mapper.BlogMapper">

    <!--#是预编译，$不是-->
    <select id="selectBlog" parameterType="String" resultMap="blogResultMap" >
    select * from blog where blog_id = #{id}
  </select>

    <insert id="insertBlog">
        inseret into blog (blog_id)  values(#{id})
    </insert>

    <update id="updateBlog">
        update blog set id = #{blog_id} where id = #{id}
    </update>

    <delete id="deleteBolg" >
        delete from blog where blog_id=#{id}
    </delete>

    <insert id="insertMulti">
        insert into blog (id) values
        <foreach item="item" collection="list" separator=",">
            (#{item.id})
        </foreach>
    </insert>

    <resultMap id="blogResultMap" type="blog">
        <id property="id" column="blog_id"></id>
        <result property="text" column="blog_text"></result>
        <result property="username" column="blog_username"></result>
    </resultMap>

    <select id="selectBlogAll" resultMap="blogResultMap">
        select * from blog
    </select>


